<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Bucătăria Ligiei</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/stil.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="#">PW Proiect</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/chestionar">Chestionar</a>
                </li>
                <% if (typeof username !== 'undefined' && username) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout (<%= username %>)</a>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/autentificare">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/creare-bd">Creare BD</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/inserare-bd">Încărcare BD</a>
                    </li>
                <% } %>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Cart
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <% if (typeof session.cart !== 'undefined' && session.cart.length > 0) { %>
                            <% session.cart.forEach((item) => { %>
                                <a class="dropdown-item" href="/vizualizare-cos">
                                    <%= item.name %> (Cantitate: <%= item.quantity %>)
                                </a>
                            <% }) %>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/vizualizare-cos">Vezi coș complet</a>
                        <% } else { %>
                            <a class="dropdown-item" href="#">Coșul este gol</a>
                        <% } %>
                    </div>
                </li>
                
            </ul>
        </div>
    </nav>
    <main role="main" class="container main-container">
        <div class="py-5">
            <%- body %>
        </div>
    </main>
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
          <span class="text-muted">Copyright &copy; <%= new Date().getFullYear() %></span>
        </div>
      </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/functii.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

</body>
</html>